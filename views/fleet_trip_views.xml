<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_FleetIQ_trip_tree" model="ir.ui.view">
        <field name="name">FleetIQ.trip.tree</field>
        <field name="model">FleetIQ.trip</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'draft'" decoration-success="state == 'completed'" decoration-warning="state == 'dispatched'" decoration-muted="state == 'cancelled'">
                <field name="name"/>
                <field name="vehicle_id"/>
                <field name="driver_id"/>
                <field name="origin"/>
                <field name="destination"/>
                <field name="start_odometer" optional="hide"/>
                <field name="end_odometer" optional="hide"/>
                <field name="cargo_weight" optional="show"/>
                <field name="revenue" sum="Total Revenue" widget="monetary"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'completed'" decoration-warning="state == 'dispatched'" decoration-muted="state == 'cancelled'"/>
            </tree>
        </field>
    </record>

    <record id="view_FleetIQ_trip_form" model="ir.ui.view">
        <field name="name">FleetIQ.trip.form</field>
        <field name="model">FleetIQ.trip</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <!--
                        State lifecycle buttons.
                        Dispatch: draft → dispatched  (sets vehicle on_trip)
                        Complete: dispatched → completed (sets vehicle available)
                        Cancel:   any non-terminal state (restores vehicle)
                    -->
                    <button name="action_dispatch"
                            string="Dispatch"
                            type="object"
                            class="oe_highlight"
                            confirm="Dispatch this trip? The selected vehicle will be marked as On Trip."
                            invisible="state != 'draft'"/>
                    <button name="action_complete"
                            string="Mark as Completed"
                            type="object"
                            class="oe_highlight"
                            confirm="Mark trip as completed? The vehicle will be returned to Available."
                            invisible="state != 'dispatched'"/>
                    <button name="action_cancel"
                            string="Cancel Trip"
                            type="object"
                            class="btn-danger"
                            confirm="Cancel this trip? Any On Trip vehicle will be reset to Available."
                            invisible="state in ('completed', 'cancelled')"/>
                    <field name="state"
                           widget="statusbar"
                           statusbar_visible="draft,dispatched,completed,cancelled"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_FleetIQ_expense)d" type="action"
                                class="oe_stat_button" icon="fa-money"
                                context="{'search_default_trip_id': active_id, 'default_trip_id': active_id, 'default_vehicle_id': vehicle_id}">
                            <div class="o_stat_info"><span class="o_stat_text">Expenses</span></div>
                        </button>
                        <button name="%(action_FleetIQ_vehicle)d" type="action"
                                class="oe_stat_button" icon="fa-truck"
                                context="{'search_default_id': vehicle_id}">
                            <div class="o_stat_info"><span class="o_stat_text">Vehicle</span></div>
                        </button>
                        <button name="%(action_FleetIQ_driver)d" type="action"
                                class="oe_stat_button" icon="fa-user"
                                context="{'search_default_id': driver_id}">
                            <div class="o_stat_info"><span class="o_stat_text">Driver</span></div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group string="Vehicle &amp; Driver">
                            <!--
                                vehicle_id domain:
                                  status = 'available'  → only available vehicles
                                  active = True         → excludes retired (set inactive by action_retire)
                            -->
                            <field name="vehicle_id"
                                   readonly="state != 'draft'"
                                   domain="[('status', '=', 'available'), ('active', '=', True)]"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <!--
                                driver_id domain:
                                  status != 'suspended' → no suspended drivers
                                  license_expiry constraints live on the model;
                                  the domain guards the UI selection.
                                  Note: license_expiry < today cannot be expressed
                                  directly in a domain (date.today() not available in
                                  XML domain syntax) — model-level @api.constrains
                                  handles the hard enforcement on save.
                            -->
                            <field name="driver_id"
                                   readonly="state != 'draft'"
                                   domain="[('status', '!=', 'suspended')]"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="origin"    readonly="state != 'draft'"/>
                            <field name="destination" readonly="state != 'draft'"/>
                        </group>
                        <group string="Cargo &amp; Trip Details">
                            <!--
                                cargo_weight: model-level @api.constrains enforces
                                weight <= vehicle.max_capacity on save.
                            -->
                            <field name="cargo_weight" readonly="state != 'draft'"/>
                            <field name="revenue"/>
                            <field name="start_odometer"
                                   readonly="state in ('completed', 'cancelled')"/>
                            <field name="end_odometer"
                                   readonly="state in ('draft', 'cancelled')"/>
                        </group>
                    </group>
                    <!--
                        Capacity check — readonly field visible when vehicle is selected.
                        vehicle_max_capacity mirrors vehicle_id.max_capacity (related field).
                    -->
                    <group invisible="not vehicle_id" string="Capacity Check">
                        <field name="vehicle_max_capacity" readonly="1"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_FleetIQ_trip_search" model="ir.ui.view">
        <field name="name">FleetIQ.trip.search</field>
        <field name="model">FleetIQ.trip</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="vehicle_id"/>
                <field name="driver_id"/>
                <field name="origin"/>
                <field name="destination"/>
                <filter name="draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="dispatched" string="Dispatched" domain="[('state', '=', 'dispatched')]"/>
                <filter name="completed" string="Completed" domain="[('state', '=', 'completed')]"/>
                <filter name="cancelled" string="Cancelled" domain="[('state', '=', 'cancelled')]"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_vehicle" string="Vehicle" context="{'group_by': 'vehicle_id'}"/>
                    <filter name="group_by_driver" string="Driver" context="{'group_by': 'driver_id'}"/>
                    <filter name="group_by_state" string="Status" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>
