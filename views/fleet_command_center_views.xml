<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--
        FleetIQ Command Center
        =========================
        Client action that renders the rich KPI dashboard via OWL / QWeb.
        Restricted to: group_FleetIQ_manager, group_FleetIQ_dispatcher
    -->

    <!-- ── Client Action ──────────────────────────────────────── -->
    <record id="action_fleetflow_command_center" model="ir.actions.client">
        <field name="name">Command Center</field>
        <field name="tag">fleetflow_command_center</field>
        <field name="target">current</field>
    </record>

    <!-- ── Static Assets (JS component + QWeb XML template + CSS) ── -->
    <record id="fleetflow_command_center_assets" model="ir.asset">
        <field name="name">fleetflow Command Center JS</field>
        <field name="bundle">web.assets_backend</field>
        <field name="path">fleetflow/static/src/js/command_center.js</field>
    </record>

    <record id="fleetflow_command_center_xml" model="ir.asset">
        <field name="name">fleetflow Command Center XML Template</field>
        <field name="bundle">web.assets_backend</field>
        <field name="path">fleetflow/static/src/xml/command_center.xml</field>
    </record>

    <record id="fleetflow_command_center_css" model="ir.asset">
        <field name="name">fleetflow Command Center CSS</field>
        <field name="bundle">web.assets_backend</field>
        <field name="path">fleetflow/static/src/css/command_center.css</field>
    </record>

</odoo>
