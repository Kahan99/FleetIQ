<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_fleetflow_driver_tree" model="ir.ui.view">
        <field name="name">fleetflow.driver.tree</field>
        <field name="model">fleetflow.driver</field>
        <field name="arch" type="xml">
            <tree decoration-success="status == 'on_duty'" decoration-info="status == 'off_duty'" decoration-danger="status == 'suspended'">
                <field name="name"/>
                <field name="license_number"/>
                <field name="license_category"/>
                <field name="license_expiry" decoration-danger="is_license_expired"/>
                <field name="phone"/>
                <field name="status" widget="badge" decoration-success="status == 'on_duty'" decoration-info="status == 'off_duty'" decoration-danger="status == 'suspended'"/>
                <field name="completion_rate" widget="percentage"/>
                <field name="safety_score" widget="progressbar"/>
                <field name="is_license_expired" column_invisible="True"/>
            </tree>
        </field>
    </record>

    <record id="view_fleetflow_driver_form" model="ir.ui.view">
        <field name="name">fleetflow.driver.form</field>
        <field name="model">fleetflow.driver</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="status" widget="badge" decoration-success="status == 'on_duty'" decoration-info="status == 'off_duty'" decoration-danger="status == 'suspended'"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_fleetflow_trip)d" type="action" class="oe_stat_button" icon="fa-road" context="{'search_default_driver_id': active_id, 'default_driver_id': active_id}">
                            <div class="o_stat_info"><span class="o_stat_text">Trips</span></div>
                        </button>
                        <button name="%(action_fleetflow_vehicle)d" type="action" class="oe_stat_button" icon="fa-truck" context="{'search_default_driver_id': active_id, 'default_driver_id': active_id}">
                            <div class="o_stat_info"><span class="o_stat_text">Vehicles</span></div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="license_number"/>
                            <field name="license_category"/>
                            <field name="license_expiry"/>
                            <field name="phone"/>
                        </group>
                        <group>
                            <field name="status" widget="badge"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group string="Performance Metrics">
                            <field name="completion_rate" widget="percentage" readonly="1"/>
                            <field name="safety_score" widget="gauge" options="{'max_field': '100'}"/>
                            <field name="is_license_expired" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Activity Feed">
                            <field name="trip_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="origin"/>
                                    <field name="destination"/>
                                    <field name="state" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_fleetflow_driver_search" model="ir.ui.view">
        <field name="name">fleetflow.driver.search</field>
        <field name="model">fleetflow.driver</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="license_number"/>
                <filter name="status_on_duty" string="On Duty" domain="[('status', '=', 'on_duty')]"/>
                <filter name="status_off_duty" string="Off Duty" domain="[('status', '=', 'off_duty')]"/>
                <filter name="status_suspended" string="Suspended" domain="[('status', '=', 'suspended')]"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_status" string="Status" context="{'group_by': 'status'}"/>
                    <filter name="group_by_company" string="Company" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>
</odoo>
