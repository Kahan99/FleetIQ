<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Groups: always updatable -->
    <record id="group_FleetIQ_user" model="res.groups">
        <field name="name">FleetIQ Base User</field>
        <field name="category_id" ref="base.module_category_services"/>
    </record>

    <record id="group_FleetIQ_manager" model="res.groups">
        <field name="name">Fleet Manager</field>
        <field name="category_id" ref="base.module_category_services"/>
        <field name="implied_ids" eval="[(4, ref('group_FleetIQ_user'))]"/>
    </record>

    <record id="group_FleetIQ_dispatcher" model="res.groups">
        <field name="name">Dispatcher</field>
        <field name="category_id" ref="base.module_category_services"/>
        <field name="implied_ids" eval="[(4, ref('group_FleetIQ_user'))]"/>
    </record>

    <record id="group_FleetIQ_safety_officer" model="res.groups">
        <field name="name">Safety Officer</field>
        <field name="category_id" ref="base.module_category_services"/>
        <field name="implied_ids" eval="[(4, ref('group_FleetIQ_user'))]"/>
    </record>

    <record id="group_FleetIQ_financial_analyst" model="res.groups">
        <field name="name">Financial Analyst</field>
        <field name="category_id" ref="base.module_category_services"/>
        <field name="implied_ids" eval="[(4, ref('group_FleetIQ_user'))]"/>
    </record>

    <!-- Record rules: noupdate so manual edits are preserved -->
    <data noupdate="1">
        <record id="FleetIQ_vehicle_company_rule" model="ir.rule">
            <field name="name">FleetIQ Vehicle Multi Company</field>
            <field name="model_id" ref="model_FleetIQ_vehicle"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_FleetIQ_manager'))]"/>
        </record>

        <record id="FleetIQ_driver_company_rule" model="ir.rule">
            <field name="name">FleetIQ Driver Multi Company</field>
            <field name="model_id" ref="model_FleetIQ_driver"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_FleetIQ_manager')), (4, ref('group_FleetIQ_safety_officer'))]"/>
        </record>

        <record id="FleetIQ_trip_company_rule" model="ir.rule">
            <field name="name">FleetIQ Trip Multi Company</field>
            <field name="model_id" ref="model_FleetIQ_trip"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_FleetIQ_manager')), (4, ref('group_FleetIQ_dispatcher'))]"/>
        </record>

        <record id="FleetIQ_maintenance_company_rule" model="ir.rule">
            <field name="name">FleetIQ Maintenance Multi Company</field>
            <field name="model_id" ref="model_FleetIQ_maintenance"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_FleetIQ_manager'))]"/>
        </record>

        <record id="FleetIQ_expense_company_rule" model="ir.rule">
            <field name="name">FleetIQ Expense Multi Company</field>
            <field name="model_id" ref="model_FleetIQ_expense"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_FleetIQ_manager'))]"/>
        </record>

        <record id="FleetIQ_dashboard_company_rule" model="ir.rule">
            <field name="name">FleetIQ Dashboard Multi Company</field>
            <field name="model_id" ref="model_FleetIQ_dashboard"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_FleetIQ_manager')), (4, ref('group_FleetIQ_financial_analyst'))]"/>
        </record>
    </data>
</odoo>
