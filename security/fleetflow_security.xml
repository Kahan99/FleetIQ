<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Groups: always updatable -->
    <record id="group_fleetflow_user" model="res.groups">
        <field name="name">FleetFlow Base User</field>
        <field name="category_id" ref="base.module_category_services"/>
    </record>

    <record id="group_fleetflow_manager" model="res.groups">
        <field name="name">Fleet Manager</field>
        <field name="category_id" ref="base.module_category_services"/>
        <field name="implied_ids" eval="[(4, ref('group_fleetflow_user'))]"/>
    </record>

    <record id="group_fleetflow_dispatcher" model="res.groups">
        <field name="name">Dispatcher</field>
        <field name="category_id" ref="base.module_category_services"/>
        <field name="implied_ids" eval="[(4, ref('group_fleetflow_user'))]"/>
    </record>

    <record id="group_fleetflow_safety_officer" model="res.groups">
        <field name="name">Safety Officer</field>
        <field name="category_id" ref="base.module_category_services"/>
        <field name="implied_ids" eval="[(4, ref('group_fleetflow_user'))]"/>
    </record>

    <record id="group_fleetflow_financial_analyst" model="res.groups">
        <field name="name">Financial Analyst</field>
        <field name="category_id" ref="base.module_category_services"/>
        <field name="implied_ids" eval="[(4, ref('group_fleetflow_user'))]"/>
    </record>

    <!-- Record rules: noupdate so manual edits are preserved -->
    <data noupdate="1">
        <record id="fleetflow_vehicle_company_rule" model="ir.rule">
            <field name="name">FleetFlow Vehicle Multi Company</field>
            <field name="model_id" ref="model_fleetflow_vehicle"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_fleetflow_manager'))]"/>
        </record>

        <record id="fleetflow_driver_company_rule" model="ir.rule">
            <field name="name">FleetFlow Driver Multi Company</field>
            <field name="model_id" ref="model_fleetflow_driver"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_fleetflow_manager')), (4, ref('group_fleetflow_safety_officer'))]"/>
        </record>

        <record id="fleetflow_trip_company_rule" model="ir.rule">
            <field name="name">FleetFlow Trip Multi Company</field>
            <field name="model_id" ref="model_fleetflow_trip"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_fleetflow_manager')), (4, ref('group_fleetflow_dispatcher'))]"/>
        </record>

        <record id="fleetflow_maintenance_company_rule" model="ir.rule">
            <field name="name">FleetFlow Maintenance Multi Company</field>
            <field name="model_id" ref="model_fleetflow_maintenance"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_fleetflow_manager'))]"/>
        </record>

        <record id="fleetflow_expense_company_rule" model="ir.rule">
            <field name="name">FleetFlow Expense Multi Company</field>
            <field name="model_id" ref="model_fleetflow_expense"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_fleetflow_manager'))]"/>
        </record>

        <record id="fleetflow_dashboard_company_rule" model="ir.rule">
            <field name="name">FleetFlow Dashboard Multi Company</field>
            <field name="model_id" ref="model_fleetflow_dashboard"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_fleetflow_manager')), (4, ref('group_fleetflow_financial_analyst'))]"/>
        </record>
    </data>
</odoo>
